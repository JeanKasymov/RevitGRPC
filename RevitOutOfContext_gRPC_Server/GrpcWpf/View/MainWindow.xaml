<Metro:MetroWindow
    x:Class="GrpcWpf.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Metro="https://github.com/aduskin"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:GrpcWpf"
    SizeToContent="WidthAndHeight"
    mc:Ignorable="d"
    BorderThickness="0"
    Title="Autodesk плагины" 
    WindowStartupLocation="CenterScreen" 
    BorderBrush="Gray" 
    Icon="Resources\rti1White.ico"
    >
    <Window.Resources>
        <DataTemplate x:Key="PluginTemplate">
            <Metro:MetroButton 
                Background="Gray" 
                Command="{Binding RelativeSource={RelativeSource AncestorType=Window, Mode=FindAncestor}, Path=DataContext.SendPluginToDoCommand }"
                CommandParameter="{Binding Path=Name}"
                Height="100" 
                Width="200">
                <StackPanel>
                    <Image 
                        Source="{Binding Path=Image}"  
                        Width="50" 
                        Height="50" 
                        Stretch="Fill"/>
                    <Metro:MetroTextBlock 
                        FontSize="12" 
                        Text="{Binding Path=Name}"/>
                </StackPanel>
            </Metro:MetroButton>
        </DataTemplate>
    </Window.Resources>
    <Grid Margin="5">
        <Metro:AduTabControl>            
            <Metro:AduTabControl.Resources>
                <Style 
                    TargetType="TabPanel">
                    <Setter 
                        Property="HorizontalAlignment" 
                        Value="Center"/>
                </Style>
                <Style 
                    TargetType ="Metro:AduTabItem">
                    <Setter 
                        Property="Foreground" 
                        Value="Black"/>
                    <Setter 
                        Property="FontSize" 
                        Value="14"/>
                </Style>
            </Metro:AduTabControl.Resources>
            <Metro:AduTabItem 
                Header="Revit">
                <ScrollViewer>
                    <StackPanel>
                        <ItemsControl 
                            ItemsSource="{Binding Plugins}"
                            ItemTemplate="{StaticResource PluginTemplate}">
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Metro:AduTabItem>
        </Metro:AduTabControl>        
    </Grid>
</Metro:MetroWindow>